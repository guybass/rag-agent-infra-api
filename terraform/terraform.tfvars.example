# AWS Region
aws_region = "us-east-1"

# Project name (used for resource naming)
project_name = "rag-agent"

# EC2 instance type
# t3.medium = 2 vCPU, 4GB RAM (~$30/month)
# t3.large  = 2 vCPU, 8GB RAM (~$60/month) - better for large ChromaDB
instance_type = "t3.medium"

# SSH key pair name (optional - leave empty for SSM-only access)
# If empty, you can still connect via: aws ssm start-session --target <instance-id>
key_name = ""

# Restrict SSH access to your IP (only used if key_name is set)
# Find your IP: curl ifconfig.me
allowed_ssh_cidr = "0.0.0.0/0"  # e.g., "203.0.113.50/32"

# GitHub repository URL
github_repo_url = "https://github.com/guybass/rag-agent-infra-api.git"

# Git branch to deploy
github_branch = "main"
